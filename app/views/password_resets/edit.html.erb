<% provide(:title, "Reset password") %>
<h1>Reset password</h1>

<div class="container">
	<%= form_for(@user, url: password_reset_path, html: {class: "form-horizontal"}) do |f| %>

		<%= render 'shared/error_messages', object: f.object %>

		<%= hidden_field_tag :email, @user.email %>
		
		<div class="form-group row">
			<%= f.label :password, "Password", class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= f.password_field :password, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row">
			<%= f.label :password_confirmation, "Password Again", class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= f.password_field :password_confirmation, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-offset-3 col-sm-10">
				<%= button_tag "Reset", class: "btn btn-default", type: :reset %>
				<%= f.submit "Submit", class: "btn btn-primary" %>
			</div>
		</div>
	<% end %>
</div>