<% provide(:title, "Reset password") %>
<h1>Reset password</h1>

<div class="container">
	<%= form_for(:password_reset, url: password_resets_path, html: {class: "form-horizontal"}) do |f| %>
		
		<div class="form-group row">
			<%= f.label :email, "Email", class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= f.text_field :email, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-offset-3 col-sm-10">
				<%= link_to "Cancel", login_path, class: "btn btn-default" %>
				<%= f.submit "Reset", class: "btn btn-primary" %>
			</div>
		</div>
	<% end %>
</div>