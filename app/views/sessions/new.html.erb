<% provide(:title, "Log In") %>
<h1>Log In</h1>

<div class="container">
	<%= form_for(:session, url: login_path, html: {class: "form-horizontal"}) do |f| %>
		
		<div class="form-group row">
			<%= f.label :email, "Email", class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= f.text_field :email, class: "form-control" %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label :password, class: "col-sm-3 control-label" %>
			<div class="col-sm-8">
				<%= f.password_field :password, class: "form-control" %>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-offset-3 col-sm-10">
				<%= f.label :remember_me, class: "checkbox inline" do %>
					<%= f.check_box :remember_me %>
					<span>Remember me</span>
				<% end %>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-offset-3 col-sm-10">
				<%= button_tag "Reset", class: "btn btn-default", type: :reset %>
				<%= f.submit "Sign in", class: "btn btn-primary" %>
			</div>
		</div>
	<% end %>
	<div class="col-sm-offset-3 col-sm-10">
		<p><%= link_to "Sign up for Where-For-Lunch", signup_path %></p>
	</div>
</div>